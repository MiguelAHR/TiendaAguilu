<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Dropdown para Pedidos -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownPedidos" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Pedidos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownPedidos">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Pedidoes">Agregar Pedido</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="RegistroPagos">RegistroPagos</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="TipoPagos">TipoPagos</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="DetallePedidos">DetallePedidos</a></li>
                            </ul>
                        </li>
                        <!-- Dropdown para KARDEX -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownKardexs" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Kardex
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownKardexs">
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Kardexs">Agregar Kardex</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="Inventarios">Inventario</a></li>
                                <li><a class="nav-link text-dark" asp-area="" asp-controller="TipoMovimientos">TiposMovimiento</a></li>
                            </ul>
                        </li>

                       
                        <!-- EMPLEADOS -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Personas">Personas</a>
                        </li>

                        <!-- Dropdown para Usuarios -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownUsuarios" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Usuarios
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownUsuarios">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AuxiliarAlmacens">Auxiliar Almacens</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="JefeAlmacens">Jefe Almacens</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Administradores">Administradores</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Usuarios">Agregar Usuario</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Roles">Agregar Rol</a></li>
                            </ul>
                        </li>

                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Productos">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Proveedors">Proveedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Proyecto - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>  