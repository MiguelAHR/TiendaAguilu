@model IEnumerable<Proyecto.Models.Kardex>

@{
    ViewData["Title"] = "Index";
}

<!-- Sección del título con un fondo degradado y bordes redondeados -->
<div class="text-center py-5 bg-primary text-white rounded shadow-lg mb-4">
    <!-- Título ajustado a un tamaño más pequeño -->
    <h2 class="display-6">Producto Más Vendido</h2>
    <p class="lead">¡Descubre cuál es el producto que más se ha vendido!</p>
</div>

<!-- Contenedor para los detalles del producto más vendido -->
@if (ViewBag.Producto != null)
{
    <div class="card shadow-lg mb-4">
        <div class="card-header bg-success text-white">
            <h3 class="card-title">Producto Más Vendido</h3>
        </div>
        <div class="card-body">
            <h5 class="card-text">
                <strong>Producto:</strong> @ViewBag.Producto <br />
                <strong>Total Vendido:</strong> @ViewBag.Total
            </h5>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>¡Ups!</strong> No hay datos disponibles sobre el producto más vendido.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Botón de volver más estilizado -->
<div class="text-center">
    <a asp-action="Index" class="btn btn-lg btn-outline-dark shadow-sm">Volver al reporte</a>
</div>
