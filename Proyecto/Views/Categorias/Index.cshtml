@model IEnumerable<Proyecto.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="my-4">Lista de Categorias</h1>

    <div class="text-center mb-4">
        <p>
            <a asp-action="Create" class="btn btn-success">Agregar Categoria</a>
        </p>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>